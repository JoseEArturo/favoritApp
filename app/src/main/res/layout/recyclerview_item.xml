<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recyclerviewitem_txtTipo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:padding="8dp"
            android:text="TextView"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recyclerviewitem_txtNombre"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/recyclerviewitem_btnMapa"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/ic_mapa" />

        <ImageButton
            android:id="@+id/recyclerviewitem_btnDetalles"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/ic_detalles" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recyclerviewitem_txtDescripcion"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:padding="8dp"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/recyclerviewitem_btnEditar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/recyclerviewitem_btnEliminar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@android:drawable/ic_menu_delete" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A89A9A"
        app:srcCompat="?attr/actionBarDivider" />

</LinearLayout>